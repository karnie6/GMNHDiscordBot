{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2019",
    "outDir": "dist",
    "rootDir": "",
    "baseUrl": ".",
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "jsx": "react",
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": false,
    "paths": {
      "@/*": ["src/*"]
    },
    "importHelpers": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true

  },
  "include": ["src/**/*.ts", "src/modules.d.ts"],
  "exclude": ["**/*.test.ts", "**/node_modules", "**/__fixtures__"], // note: Since .test.ts are excluded -> paths in those files don't use '@/*'
  "ts-node": {
    "require": ["tsconfig-paths/register"]
  }
}